<xml>
  <scene>
    
    
    <!-- Background -->
    <background texture="clouds.ppm"/>
    
    
    <!-- Room -->
    <object name="room">
      <translate x="0" y="0" z="12"/>
      <object type="plane" name="floor" material="floor">
        <scale value="32"/>
        <translate z="-12"/>
        <rotate angle="110" z="1"/>
      </object>
      <object type="plane" name="ceiling" material="ceiling">
        <scale value="32"/>
        <rotate angle="180" x="1"/>
        <translate z="12"/>
      </object>
      <object name="mainWall">
        <object type="plane" name="mainWallLeft" material="walls">
          <scale value="32"/>
          <rotate angle="90" x="1"/>
          <translate x="-40"/>
        </object>
        <object type="plane" name="mainWallTop" material="walls">
          <scale value="32"/>
          <rotate angle="90" x="1"/>
          <translate z="41"/>
        </object>
        <object type="plane" name="mainWallBott" material="walls">
          <scale value="32"/>
          <rotate angle="90" x="1"/>
          <translate z="-41"/>
        </object>
        <object type="plane" name="mainWallRight" material="walls">
          <scale value="32"/>
          <rotate angle="90" x="1"/>
          <translate x="40"/>
        </object>
        <translate y="20"/>
        <rotate angle="20" z="1"/>
      </object>
      <object type="plane" name="secWall" material="walls">
        <scale value="32"/>
        <rotate angle="-90" y="1"/>
        <translate x="25"/>
        <rotate angle="20" x="1"/>
        <rotate angle="20" y="1"/>
      </object>
    </object>
    
    
    <!-- Objects -->
    <object name="hanging">
      <object type="obj" name="torus" material="mtl1">
        <scale value="2.0"/>
        <rotate angle="90" x="1"/>
        <rotate angle="90" z="1"/>
        <translate z="7"/>
      </object>
      <object type="obj" name="teapot" material="mtl1">
        <scale value="0.6"/>
        <rotate angle="180" z="1"/>
        <rotate angle="90" y="1"/>
        <translate x="5" z="-2.5"/>
      </object>
      <rotate angle="40" z="1"/>
      <translate x="8" y="3" z="17"/>
    </object>
    
    <object type="obj" name="icosphere" material="mtl2">
      <scale value="4.0"/>
      <rotate angle="90" x="1"/>
      <translate x="-10" y="-10" z="20"/>
    </object>
    
    
    <!-- Materials -->
    <material type="blinn" name="floor">
      <diffuse texture="wood.ppm"/>
    </material>
    <material type="blinn" name="ceiling">
      <diffuse texture="ceiling.ppm"/>
    </material>
    <material type="blinn" name="walls">
      <diffuse texture="wall.ppm"/>
    </material>
    <material type="blinn" name="mtl1">
      <diffuse  r="0.8" g="0.2" b="0.2"/>
      <specular r="1.0" g="1.0" b="1.0" value="0.7"/>
      <glossiness value="20"/>
      <reflection value="0.0"/>
    </material>
    <material type="blinn" name="mtl2">
      <reflection value="1.0"/>
    </material>
    
    
    <!-- Lights -->
    <light type="ambient" name="ambientLight">
      <intensity value="0.1"/>
    </light>
    <light type="point" name="pointLight">
      <intensity value="0.5"/>
      <position x="0" y="0" z="20"/>
    </light>
  </scene>
  
  
  <!-- Camera -->
  <camera>
    <position x="0" y="-60" z="12"/>
    <target x="0" y="0" z="12"/>
    <up x="0" y="0" z="1"/>
    <fov value="40"/>
    <width value="800"/>
    <height value="600"/>
  </camera>
</xml>

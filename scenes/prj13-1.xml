<xml>
  <scene>
    <background r="1" g="1" b="1" texture="clouds.ppm"/>
    
    <!-- Objects -->
    <object name="box">
      <translate x="0" y="0" z="12"/>
      <object type="plane" name="WallBottom" material="wall">
        <scale value="32"/>
        <translate z="-12"/>
      </object>
      <object type="plane" name="WallTop" material="wall">
        <scale value="32"/>
        <rotate angle="180" x="1"/>
        <translate z="12"/>
      </object>
      <object type="plane" name="WallBack" material="walls">
        <scale value="32"/>
        <rotate angle="90" x="1"/>
        <translate x="40" y="20"/>
      </object>
      <object type="plane" name="WallBack" material="walls">
        <scale value="32"/>
        <rotate angle="90" x="1"/>
        <translate z="-41" y="20"/>
      </object>
      <object type="plane" name="WallBack" material="walls">
        <scale value="32"/>
        <rotate angle="90" x="1"/>
        <translate z="41" y="20"/>
      </object>
      <object type="plane" name="WallBack" material="walls">
        <scale value="32"/>
        <rotate angle="90" x="1"/>
        <translate x="-40" y="20"/>
      </object>
    </object>
    <object type="obj" name="torus" material="mtl1">
      <scale value="2.0"/>
      <rotate angle="90" x="1"/>
      <rotate angle="90" z="1"/>
      <translate x="12" y="5" z="24"/>
    </object>
    <object type="obj" name="teapot" material="mtl1">
      <scale value="0.4"/>
      <rotate angle="180" z="1"/>
      <rotate angle="90" y="1"/>
      <translate x="14" y="5" z="17"/>
    </object>
    <object type="obj" name="icosphere" material="mtl2">
      <scale value="4.0"/>
      <rotate angle="90" x="1"/>
      <translate x="0" y="0" z="20"/>
    </object>
    
    
    <!-- Materials -->
    <material type="blinn" name="wall">
      <diffuse  r="1" g="1" b="1"/>
      <specular value="0"/>
    </material>
    <material type="blinn" name="walls">
      <diffuse texture="bricks.ppm">
      </diffuse>
      <specular value="0.3"/>
      <glossiness value="10"/>
    </material>
    <material type="blinn" name="mtl1">
      <diffuse  r="0.8" g="0.2" b="0.2"/>
      <specular r="1.0" g="1.0" b="1.0" value="0.7"/>
      <glossiness value="20"/>
      <reflection value="0.0"/>
    </material>
    <material type="blinn" name="mtl2">
      <refraction value="1.0" index="1.8"/>
    </material>

    <!-- Lights -->
    <light type="ambient" name="ambientLight">
      <intensity value="0.1"/>
    </light>
    <light type="point" name="pointLight">
      <intensity value="0.5"/>
      <position x="0" y="0" z="20"/>
    </light>
  </scene>

  <camera>
    <position x="0" y="-60" z="12"/>
    <target x="0" y="0" z="12"/>
    <up x="0" y="0" z="1"/>
    <fov value="30"/>
    <width value="800"/>
    <height value="600"/>
  </camera>
</xml>
